{{!-- Root --}}
<div id="crazy-root" descriptive-id="" class="carousel carousel-slider {{!-- center --}} screen-fit-min-y">

    {{!-- Statuc --}}
    <div class="carousel-fixed-item center">
      <regular-btn size="small" type="extended" icon-text="home" label="Home" size="small" depth="outlined"></regular-btn>
    </div>

    {{!-- Iteration of errors --}}
    {{#each errors as |error|}}
    <div class="carousel-item {{error._status_code.style.color.fill}} white-text row" href="{{@key}}">
      <div class="col l3 offset-l5">
        {{!-- Icon --}}
        <h1><regular-btn 
          size="small"
          color-primary="{{error._status_code.style.color.text}}"
          color-secondary="{{error._status_code.style.color.fill}}"
          {{#if error._status_code.style.icon.text}}icon-text="{{error._status_code.style.icon.text}}"{{/if}}
          {{#if error._status_code.style.icon.class}}icon-class="{{error._status_code.style.icon.class}}"{{/if}}
          size="large"
          depth="flat"
        ></regular-btn>
        {{error.code}}</h1>
        <h2>{{error.detail}}</h2>
        <blockquote>{{error._status_code.title}}</blockquote>
      </div>
    </div>
    {{/each}}

</div>