# Crazy env
{{#inArray configuration "http"}}
CRAZY_HTTP_PORT={{#if http_port}}{{http_port}}{{else}}80{{/if}}{{/inArray}}{{#inArray configuration "https-online"}}
CRAZY_HTTPS_PORT=443{{/inArray}}{{#inArray configuration "https-local"}}
