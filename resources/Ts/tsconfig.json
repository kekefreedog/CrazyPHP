{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6", "dom", "es2017", "es2021"],
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "typeRoots": ["./node_modules/@types", "./app/Front/types"],
        "strictPropertyInitialization": false,
        "paths": {
            "tslib" : ["./node_modules/tslib/tslib.d.ts"]
        }
